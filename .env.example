# =============================================================================
# CONFIGURATION - Système de Candidature Automatique
# =============================================================================
# Copiez ce fichier vers .env et remplissez vos vraies valeurs

# =============================================================================
# API KEYS (OBLIGATOIRE)
# =============================================================================

# OpenAI API Key - Obligatoire pour l'adaptation du CV
# Obtenez votre clé sur : https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# =============================================================================
# CONFIGURATION RECHERCHE D'EMPLOI
# =============================================================================

# Profil par défaut (data_scientist, scrum_master, data_analyst)
DEFAULT_PROFILE=data_scientist

# Localisation de recherche
DEFAULT_LOCATION=Île-de-France

# Mots-clés de recherche par défaut
DEFAULT_KEYWORDS=data scientist python machine learning

# Salaire minimum attendu (en euros)
MIN_SALARY=40000

# Mots-clés à exclure (séparés par des virgules)
EXCLUDE_KEYWORDS=stage,intern,bénévole,freelance,stagiaire

# =============================================================================
# LIMITES ET SÉCURITÉ
# =============================================================================

# Nombre maximum de candidatures par jour
MAX_APPLICATIONS_PER_DAY=50

# Nombre maximum de candidatures par heure
MAX_APPLICATIONS_PER_HOUR=10

# Délai minimum entre candidatures (en secondes)
MIN_DELAY_BETWEEN_APPLICATIONS=30

# Délai maximum entre candidatures (en secondes)
MAX_DELAY_BETWEEN_APPLICATIONS=120

# =============================================================================
# CONFIGURATION SITES WEB
# =============================================================================

# Sites à activer (true/false)
INDEED_ENABLED=true
LINKEDIN_ENABLED=false
WELCOME_TO_JUNGLE_ENABLED=true

# Nombre de pages à scraper par site
MAX_PAGES_PER_SITE=5

# =============================================================================
# CONFIGURATION SELENIUM
# =============================================================================

# Mode headless (sans interface graphique)
SELENIUM_HEADLESS=true

# Timeout pour le chargement des pages (en secondes)
PAGE_LOAD_TIMEOUT=30

# User Agent personnalisé (optionnel)
CUSTOM_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# CONFIGURATION BASE DE DONNÉES
# =============================================================================

# Chemin vers la base de données
DATABASE_PATH=data/jobs.db

# Fréquence de sauvegarde (daily, weekly)
BACKUP_FREQUENCY=daily

# Nombre de jours avant suppression des anciennes offres
CLEANUP_OLD_JOBS_DAYS=90

# =============================================================================
# CONFIGURATION LOGS
# =============================================================================

# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Chemin vers le fichier de log
LOG_FILE_PATH=logs/job_automation.log

# Taille maximale du fichier de log (en MB)
MAX_LOG_FILE_SIZE=10

# =============================================================================
# CONFIGURATION DASHBOARD
# =============================================================================

# Port pour le dashboard Streamlit
DASHBOARD_PORT=8501

# Mot de passe pour protéger le dashboard (optionnel)
DASHBOARD_PASSWORD=

# =============================================================================
# NOTIFICATIONS (OPTIONNEL)
# =============================================================================

# Email pour recevoir des notifications
NOTIFICATION_EMAIL=

# Configuration SMTP (si notifications email activées)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Webhook Slack (optionnel)
SLACK_WEBHOOK_URL=

# =============================================================================
# CONFIGURATION AVANCÉE
# =============================================================================

# Mode debug (active plus de logs)
DEBUG_MODE=false

# Mode dry run par défaut (teste sans candidater)
DEFAULT_DRY_RUN=false

# Sauvegarde automatique des CV adaptés
SAVE_ADAPTED_CVS=true

# Export automatique des statistiques
AUTO_EXPORT_STATS=false

