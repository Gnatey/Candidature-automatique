# =============================================================================
# CONFIGURATION - Système de Candidature Automatique VERSION GRATUITE
# =============================================================================
# Copiez ce fichier vers .env et remplissez vos valeurs

# =============================================================================
# API KEYS (OPTIONNEL)
# =============================================================================

# OpenAI API Key - OPTIONNEL pour la version gratuite
# Si vous n'avez pas de clé, laissez vide = adaptation basique gratuite
# Si vous voulez l'adaptation IA, obtenez une clé sur : https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# CONFIGURATION RECHERCHE D'EMPLOI
# =============================================================================

# Profil par défaut (data_scientist, scrum_master, data_analyst)
DEFAULT_PROFILE=data_scientist

# Localisation de recherche
DEFAULT_LOCATION=Île-de-France

# Mots-clés de recherche par défaut
DEFAULT_KEYWORDS=data scientist python machine learning

# Salaire minimum attendu (en euros)
MIN_SALARY=40000

# Mots-clés à exclure (séparés par des virgules)
EXCLUDE_KEYWORDS=stage,intern,bénévole,freelance,stagiaire

# =============================================================================
# LIMITES ET SÉCURITÉ
# =============================================================================

# Nombre maximum de candidatures par jour
MAX_APPLICATIONS_PER_DAY=30

# Nombre maximum de candidatures par heure
MAX_APPLICATIONS_PER_HOUR=5

# Délai minimum entre candidatures (en secondes)
MIN_DELAY_BETWEEN_APPLICATIONS=30

# Délai maximum entre candidatures (en secondes)
MAX_DELAY_BETWEEN_APPLICATIONS=120

# =============================================================================
# CONFIGURATION SITES WEB
# =============================================================================

# Sites à activer (true/false)
INDEED_ENABLED=true
LINKEDIN_ENABLED=false
WELCOME_TO_JUNGLE_ENABLED=false

# Nombre de pages à scraper par site (gardez bas pour éviter la détection)
MAX_PAGES_PER_SITE=2

# =============================================================================
# CONFIGURATION BASE DE DONNÉES
# =============================================================================

# Chemin vers la base de données
DATABASE_PATH=data/jobs.db

# Fréquence de sauvegarde (daily, weekly)
BACKUP_FREQUENCY=daily

# =============================================================================
# CONFIGURATION LOGS
# =============================================================================

# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# EXEMPLE DE CONFIGURATION GRATUITE
# =============================================================================

